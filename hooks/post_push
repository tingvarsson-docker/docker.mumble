#!/bin/bash

MUMBLE_VERSION=$(docker inspect --format '{{ index .Config.Labels "org.label-schema.version"}}' $IMAGE_NAME)
MUMBLE_SHORT_VERSION=${MUMBLE_VERSION%.*}
MUMBLE_MAJOR_VERSION=${MUMBLE_SHORT_VERSION%.*}

docker tag $IMAGE_NAME $DOCKER_REPO:$MUMBLE_VERSION
docker push $DOCKER_REPO:$MUMBLE_VERSION

docker tag $IMAGE_NAME $DOCKER_REPO:$MUMBLE_SHORT_VERSION
docker push $DOCKER_REPO:$MUMBLE_SHORT_VERSION

docker tag $IMAGE_NAME $DOCKER_REPO:$MUMBLE_MAJOR_VERSION
docker push $DOCKER_REPO:$MUMBLE_MAJOR_VERSION
